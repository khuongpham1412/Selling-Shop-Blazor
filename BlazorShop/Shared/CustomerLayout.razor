@code{
    SessionUser sessionUser;
    protected override async Task OnInitializedAsync()
    {


    }

    private async void LogOut()
    {
        session.RemoveItemAsync(SessionKey.CART);
        session.RemoveItemAsync(SessionKey.CUSTOMER);
        session.ClearAsync();
        NavigationManager.NavigateTo("/");
        OnAfterRenderAsync(true);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(firstRender)
        {
            sessionUser = await session.GetItemAsync<SessionUser>(SessionKey.CUSTOMER);
             jsRuntime.InvokeVoidAsync("runJs");
            await base.OnAfterRenderAsync(firstRender);
            StateHasChanged();
        }
    
        }
    }
